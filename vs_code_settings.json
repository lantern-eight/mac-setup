// VS Code/Cursor settings

{
    "terminal.external.osxExec": "iterm.app",
    "terminal.integrated.scrollback": 9999999999999,
    "terminal.integrated.persistentSessionScrollback": 9999999999999,
    "terminal.integrated.shellIntegration.history": 9999999999999,
    "terminal.integrated.defaultProfile.osx": "zsh (2)",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "editor.renderWhitespace": "all",
    "editor.rulers": [

        88,
        120
    ],
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#00a6ff35",
        "editor.selectionHighlightBackground": "#00fbff0f",
        "editor.selectionHighlightBorder": "#00fbff51",
        "editor.lineHighlightBackground": "#1073cf00",
        "editor.lineHighlightBorder": "#00eeff62"
    },
    "workbench.activityBar.orientation": "vertical",
    "workbench.colorTheme": "Default Dark+",
    "workbench.preferredDarkColorTheme": "Default Dark Modern",
    "workbench.preferredHighContrastColorTheme": "Default Dark+",
    "workbench.preferredHighContrastLightColorTheme": "Default Light Modern",
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "window.autoDetectColorScheme": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "variable.other.table.sql",
                    "entity.name.type.table.sql",
                    "support.class.sql",
                    "variable.other.object.sql",
                    "constant.other.database-name.sql"
                ],
                "setttings": {
                    "foreground": "#bb8cb3"
                }
            }
        ]
    },
    "workbench.iconTheme": "material-icon-theme",
    "rainbowString": {
        "extensions": [
            ".cs",
            ".csx",
            ".fs",
            ".fsx",
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".csproj",
            ".fsproj",
            ".py",
            ".ipynb"
        ]
    },
    "explorer.confirmDelete": false,
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "cursor.composer.queueMessageDefaultBehavior": "stop-and-send",
    "cursor.cpp.disabledLanguages": [
        "plaintext"
    ],
    "editor.minimap.enabled": true,
    "redhat.telemetry.enabled": false,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "explorer.confirmDragAndDrop": false,
